{
  "name": "AH_Appium_TS",
  "version": "1.0.0",
  "description": "TypeScript mobile automation framework with WebdriverIO, Appium and BrowserStack",
  "type": "commonjs",
  "private": true,
  "scripts": {
    "setup": "npm install",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "show-apps:android-inhouse": "ts-node tools/cache-manager.ts show-apps:android-inhouse",
    "show-apps:android-store": "ts-node tools/cache-manager.ts show-apps:android-store",
    "show-apps:ios-sandbox": "ts-node tools/cache-manager.ts show-apps:ios-sandbox",
    "show-apps:ios-store": "ts-node tools/cache-manager.ts show-apps:ios-store",
    "update-apps:android-inhouse": "ts-node tools/cache-manager.ts android-inhouse",
    "update-apps:android-store": "ts-node tools/cache-manager.ts android-store",
    "update-apps:ios-sandbox": "ts-node tools/cache-manager.ts ios-sandbox",
    "update-apps:ios-store": "ts-node tools/cache-manager.ts ios-store",
    "show-devices:android": "ts-node tools/cache-manager.ts show-devices:android",
    "show-devices:ios": "ts-node tools/cache-manager.ts show-devices:ios",
    "update-devices:android": "ts-node tools/cache-manager.ts update-devices:android",
    "update-devices:ios": "ts-node tools/cache-manager.ts update-devices:ios",
    "show-cache": "ts-node tools/cache-manager.ts show",
    "clear-cache": "ts-node tools/cache-manager.ts clear",
    "test:android-inhouse:browserstack": "ts-node tools/run-parallel-tests.ts config/platforms/android-inhouse.browserstack.conf.ts",
    "test:android-inhouse:local": "wdio run config/platforms/android-inhouse.local.conf.ts",
    "test:android-firebase:local": "wdio run config/platforms/android-firebase.local.conf.ts",
    "test:android-store:browserstack": "ts-node tools/run-parallel-tests.ts config/platforms/android-store.browserstack.conf.ts",
    "test:android-store:local": "wdio run config/platforms/android-store.local.conf.ts",
    "test:ios-sandbox:browserstack": "ts-node tools/run-parallel-tests.ts config/platforms/ios-sandbox.browserstack.conf.ts",
    "test:ios-sandbox:local": "wdio run config/platforms/ios-sandbox.local.conf.ts",
    "test:ios-testflight:local": "wdio run config/platforms/ios-testflight.local.conf.ts",
    "test:ios-store:browserstack": "ts-node tools/run-parallel-tests.ts config/platforms/ios-store.browserstack.conf.ts",
    "test:ios-store:local": "wdio run config/platforms/ios-store.local.conf.ts",
    "test:multi-locale:ios": "ts-node tools/run-multi-locale-tests.ts --platform=ios --tags=@Internationalization",
    "test:multi-locale:android": "ts-node tools/run-multi-locale-tests.ts --platform=android --tags=@Internationalization",
    "clean:logs": "rimraf logs/*.log logs/*.err logs/*.csv logs/*.json logs/performance-report",
    "prune:logs": "ts-node tools/cleanup-logs.ts",
    "prepare": "git config --local core.hooksPath .husky || true"
  },
  "keywords": [
    "appium",
    "mobile",
    "automation",
    "typescript",
    "browserstack",
    "webdriverio"
  ],
  "author": "Adam Ferreira",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/tag-expressions": "^9.0.0",
    "@types/chai": "^5.2.3",
    "@types/node": "^25.0.10",
    "@types/proper-lockfile": "^4.1.4",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@wdio/appium-service": "^9.23.2",
    "@wdio/browserstack-service": "^9.23.2",
    "@wdio/cli": "^9.23.2",
    "@wdio/cucumber-framework": "^9.23.2",
    "@wdio/local-runner": "^9.23.2",
    "@wdio/spec-reporter": "^9.23.2",
    "appium": "^3.2.0",
    "appium-uiautomator2-driver": "^6.7.12",
    "appium-xcuitest-driver": "^10.18.2",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "node-emoji": "^2.2.0",
    "proper-lockfile": "^4.1.2",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@wdio/types": "^9.23.2",
    "axios": "^1.13.3",
    "browserstack-local": "^1.5.8",
    "chai": "^6.2.2",
    "dotenv": "^17.2.3",
    "webdriverio": "^9.23.2"
  }
}
